<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SignupActivity"
        android:id="@+id/layout_signup">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:fontFamily="@font/pacifico"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

    <Button
            android:id="@+id/back_signup"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:onClick="onBackButtonClick"/>

    <FrameLayout
            android:id="@+id/loading_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"/>

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/form_signup">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginEnd="8dp" android:id="@+id/cardView2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.257">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar_signup"
                        android:src="@drawable/avatar_placeholder"
                        app:civ_border_color="@color/colorAccent"
                        app:civ_border_width="2dp"
                        android:layout_width="72dp"
                        android:layout_height="72dp"/>

                <Button
                        android:id="@+id/choose_image_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_image"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/avatar_signup"
                        android:layout_marginStart="16dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                        android:id="@+id/load_image_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/load_image"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/choose_image_signup"
                        android:layout_marginStart="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/cardView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintVertical_bias="0.026">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <EditText
                        android:id="@+id/email_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:layout_marginBottom="8dp"
                        android:inputType="textEmailAddress"/>

                <EditText
                        android:id="@+id/username_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"/>

                <EditText
                        android:id="@+id/password_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:layout_marginBottom="8dp"
                        android:inputType="textPassword"/>

                <EditText
                        android:id="@+id/confirm_password_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/repeat_password"
                        android:layout_marginBottom="16dp"
                        android:inputType="textPassword"/>

                <Spinner
                        android:id="@+id/level_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/levels">

                </Spinner>

                <Button
                        android:layout_marginTop="16dp"
                        android:id="@+id/submit_signup"
                        android:text="@string/signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_gravity="center"
                        android:onClick="onSubmitButtonClick"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>