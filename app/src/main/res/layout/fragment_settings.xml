<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorPrimary">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/text_header"
                    android:text="@string/settings"
                    android:textColor="@color/colorOrange"
                    android:fontFamily="@font/pacifico"
                    android:textSize="26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:text="@string/dark_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"/>

            <androidx.cardview.widget.CardView
                    android:id="@+id/card_dark_theme"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:transitionName="trtext_about">

                <FrameLayout
                        android:id="@+id/button_dark_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                    <TextView
                            android:id="@+id/text_dark_theme"
                            android:text="@string/setup_dark_theme"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:textColor="?android:textColorPrimary"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="16dp"/>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:text="@string/about_caps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?android:textColorPrimary"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"/>

            <androidx.cardview.widget.CardView
                    android:id="@+id/about_card"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:transitionName="trtext_about">

                <FrameLayout
                        android:id="@+id/button_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                    <TextView
                            android:id="@+id/text_about"
                            android:text="@string/about_application"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:textColor="?android:textColorPrimary"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="16dp"
                            android:transitionName="trtext_name"/>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>