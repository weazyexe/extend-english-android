<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/login_graph" app:startDestination="@id/welcomeFragment">

    <fragment android:id="@+id/welcomeFragment" android:name="exe.weazy.extendenglish.view.fragment.WelcomeFragment"
              android:label="WelcomeFragment">
        <action
                android:id="@+id/action_welcomeFragment_to_emailFragment"
                app:destination="@id/emailFragment"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_right"
                app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment android:id="@+id/emailFragment" android:name="exe.weazy.extendenglish.view.fragment.EmailFragment"
              android:label="EmailFragment">
        <action
                android:id="@+id/action_emailFragment_to_passwordFragment"
                app:destination="@id/passwordFragment"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_right"
                app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment android:id="@+id/passwordFragment" android:name="exe.weazy.extendenglish.view.fragment.PasswordFragment"
              android:label="PasswordFragment">
        <action android:id="@+id/action_passwordFragment_to_confirmPasswordFragment"
                app:destination="@id/confirmPasswordFragment"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_right"
                app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment android:id="@+id/confirmPasswordFragment"
              android:name="exe.weazy.extendenglish.view.fragment.ConfirmPasswordFragment"
              android:label="ConfirmPasswordFragment">
        <action
                android:id="@+id/action_confirmPasswordFragment_to_categoriesFragment"
                app:destination="@id/categoriesFragment"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_right"
                app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment android:id="@+id/categoriesFragment" android:name="exe.weazy.extendenglish.view.fragment.CategoriesFragment"
              android:label="CategoriesFragment"/>
</navigation>